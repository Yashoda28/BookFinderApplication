<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_test1"
    android:fillViewport="true">

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Viewing2Activity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageViewOnViewing2"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="46dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtViewing2Title"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:singleLine="true"
            android:text="Title:"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/txtViewing2Title"
            android:textSize="20sp"
            android:id="@+id/etViewing2Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:singleLine="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtViewing2Author"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:singleLine="true"
            android:text="Author:"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/txtViewing2Author"
            android:textSize="20sp"
            android:id="@+id/etViewing2Author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:singleLine="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtViewing2Summary"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:singleLine="true"
            android:text="Summary:"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/txtViewing2Summary"
            android:textSize="20sp"
            android:id="@+id/etViewing2Summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:singleLine="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtViewing2Price"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:singleLine="true"
            android:text="Price:"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/txtViewing2Price"
            android:textSize="20sp"
            android:id="@+id/etViewing2Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:inputType="text"
            android:singleLine="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtViewing2Status"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:layout_alignParentTop="true"
            android:singleLine="true"
            android:text="Status"
            android:textSize="20sp"
            android:textStyle="bold" />
        <!--<RadioGroup
            android:layout_width="match_parent"
            android:id="@+id/radiogroupViewing2"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/txtViewing2Status"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/radio_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="available" />
            <RadioButton
                android:id="@+id/radio_unavailable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unavailable"/>
        </RadioGroup>-->
        <CheckBox android:id="@+id/checkbox_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="false"
            android:layout_toRightOf="@id/txtViewing2Status"
            android:layout_marginBottom="25dp"
            android:text="available"
            android:onClick="onCheckboxClicked"/>
        <CheckBox android:id="@+id/checkbox_unavailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:clickable="false"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/txtViewing2Status"
            android:layout_below="@+id/checkbox_available"
            android:layout_marginTop="-25dp"
            android:text="unavailable"
            android:onClick="onCheckboxClicked"/>
    </RelativeLayout>

    <Button
    android:id="@+id/btnUpdateOnViewing2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:text="Update"
    android:layout_marginLeft="10dp"
    android:background="@layout/reflected_gradient_effect"
    android:textColor="#f9fcfa"
    android:layout_marginRight="10dp" />

    <Button
        android:id="@+id/btnInterestedOnViewing2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@layout/reflected_gradient_effect"
        android:textColor="#f9fcfa"
        android:text="I want this book"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:id="@+id/btnBackOnViewing2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@layout/reflected_gradient_effect"
        android:textColor="#f9fcfa"
        android:text="View on Map"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

        <Button
            android:id="@+id/btnBackToBooksViewing2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@layout/reflected_gradient_effect"
            android:text="View all Books"
            android:textColor="#f9fcfa" />


</LinearLayout>
</ScrollView>